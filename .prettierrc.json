{
  "plugins": ["@trivago/prettier-plugin-sort-imports"],
  "importOrder": [
    "^react",
    "@/components/(.*)",
    "<THIRD_PARTY_MODULES>",
    "@/hooks/(.*)",
    "@/api/(.*)",
    "@/shared/(.*)",
    "@/helpers/(.*)",
    "@/store/(.*)",
    "\\.(css|scss|sass)$"
  ],
  "importOrderSeparation": true,
  "importOrderCaseInsensitive": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "printWidth": 80,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "tabWidth": 4,
  "trailingComma": "es5",
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "semi": false
}
